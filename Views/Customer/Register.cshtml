@{
    ViewData["Title"] = "Register";
}

<!-- Register Section Begin -->
<section class="login spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="login__form">
                    <h2 class="text-center mb-4">Register</h2>
                    <form action="/register" method="post">
                        <div class="input__item form-group">
                            <input type="text" id="username" name="username" placeholder="Username" required aria-label="username" class="form-control" required>
                        </div>
                        <div class="input__item form-group">
                            <input type="email" id="email" name="email" placeholder="Email address" required aria-label="Email address" class="form-control" required>
                        </div>
                        <div class="input__item form-group">
                            <input type="password" id="password" name="password" placeholder="Password" required aria-label="Password" class="form-control" required>
                        </div>
                        <div class="input__item form-group">
                            <input type="text" id="fullName" name="fullName" placeholder="FullName" required aria-label="fullName" class="form-control" required>
                        </div>
                        <div class="input__item form-group">
                            <input type="text" id="phone" name="phone" placeholder="Phone" required aria-label="phone" class="form-control" required>
                        </div>
                        <div class="input__item form-group">
                            <input type="text" id="address" name="address" placeholder="Address" required aria-label="address" class="form-control" required>
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="site-btn">Register Now</button>
                            <a href="/login" class="primary-btn">Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>